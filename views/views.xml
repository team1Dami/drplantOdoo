<odoo>
    <data>
       
        <!-- explicit list view definition -->
        
        <record model="ir.ui.view" id="drplant.list">
          <field name="name">drplant list</field>
          <field name="model">drplant.shop</field>
          <field name="arch" type="xml">
            <tree>
              <field name="shop_name"/>
              <field name="url"/>
              <field name="location"/> 
              <field name="comission"/>               
              <field name="email"/> 
            </tree>
          </field>
        </record>
        

        <!-- actions opening views on models -->
        
        <record model="ir.actions.act_window" id="drplant.action_window">
          <field name="name">drplant window</field>
          <field name="res_model">drplant.equipment</field>
          <field name="view_mode">tree,form</field>
        </record>
        

        <!-- server action to the one above -->
        <!--
        <record model="ir.actions.server" id="drplant.action_server">
          <field name="name">drplant server</field>
          <field name="model_id" ref="model_drplant_drplant"/>
          <field name="code">
            action = {
              "type": "ir.actions.act_window",
              "view_mode": "tree,form",
              "res_model": self._name,
            }
          </field>
        </record>
       -->

        <!-- Top menu item -->
      
        <menuitem name="drplant" id="drplant.menu_root"/>
    
        <!-- menu categories -->
      
        <menuitem name="Shops" id="drplant.menu_1" parent="drplant.menu_root"/>
        <!--<menuitem name="Menu 2" id="drplant.menu_2" parent="drplant.menu_root"/>-->
    
        <!-- actions -->
       
        <menuitem name="List" id="drplant.menu_1_list" parent="drplant.menu_1"
                  action="drplant.action_window"/>
        <!--<menuitem name="Server to list" id="drplant" parent="drplant.menu_2"
                  action="drplant.action_server"/>-->
        
    </data>
</odoo>